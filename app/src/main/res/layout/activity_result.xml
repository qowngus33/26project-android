<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tech_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:text="테크 Tech"
                android:textAlignment="center"
                android:textColorHighlight="@color/black"
                android:textColor="#808080"
                android:textStyle="bold"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="30dp"
                android:textSize="40dp"
                android:shadowRadius="7.0"
                android:shadowDx="7.0"
                android:shadowDy="7.0"
                android:shadowColor="#ffffff"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="377dp"
                android:layout_height="371dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/tech" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/seperate"
                android:contentDescription="TODO" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="367dp"
                android:layout_height="315dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/tech_description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#808080"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="나와 잘맞는 친구"
                        android:textSize="20dp"
                        android:shadowRadius="7.0"
                        android:shadowDx="7.0"
                        android:shadowDy="7.0"
                        android:shadowColor="#ffffff"/>

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/tech" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#808080"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="나와 안맞는 친구"
                        android:textSize="20dp"
                        android:shadowRadius="7.0"
                        android:shadowDx="7.0"
                        android:shadowDy="7.0"
                        android:shadowColor="#ffffff"/>

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/tech" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="공유하기" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>